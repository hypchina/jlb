<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item
        android:right="18dp"
        android:left="18dp">
        <shape>
            <solid android:color="#d2d2d2" />
        </shape>
    </item>

    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:top="1dp"
        >
        <shape>
            <solid android:color="@color/primaryBackgroundColor" />

            <padding
                android:bottom="1dp"
                android:top="1dp" />
        </shape>
    </item>
</layer-list>